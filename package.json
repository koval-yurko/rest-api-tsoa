{
  "name": "typescript-express-tsoa-api",
  "version": "1.0.0",
  "description": "TypeScript Express API with tsoa for OpenAPI spec generation",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node src/app.ts",
    "generate-spec": "node scripts/generate-spec.js",
    "generate-routes": "tsoa routes",
    "generate-swagger": "tsoa spec",
    "prebuild": "npm run generate-spec",
    "setup": "npm install && npm run generate-spec && npm run build"
  },
  "keywords": [
    "typescript",
    "express",
    "tsoa",
    "openapi",
    "swagger"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "swagger-ui-express": "^5.0.0",
    "tsoa": "^5.1.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@types/swagger-ui-express": "^4.1.6",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}